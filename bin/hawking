#!/usr/bin/env ruby
STDERR.sync = STDOUT.sync = true

require "hawking"
extend Hawking

usage = "hawking <jobs.rb> [<job>[,<job>,..]]"

file = ARGV.shift or abort usage
jobs = ARGV.shift.split(',') rescue nil

file = "./#{file}" unless file.match(/^[\/.]/)

require file

trap("INT") do
  puts "\rExiting"
  exit
end

Hawking.run
